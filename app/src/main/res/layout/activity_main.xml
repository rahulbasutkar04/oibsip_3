<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_weight="1"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:inputType="textPersonName"

        android:textAlignment="textEnd"
        android:textSize="30pt"
        tools:ignore="RtlCompat,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FDD835">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/clear"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:insetBottom="2dp"

                android:onClick="clrEvent"
                android:text="clear"
                android:textColor="#6BF807"
                android:textSize="14sp"
                app:iconTint="#151414"
                tools:ignore="TextContrastCheck"></Button>

            <Button
                android:id="@+id/plus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="OperatorEvent"
                android:text="+"
                android:textColor="#6BF807"
                android:textSize="24sp"
                tools:ignore="TextContrastCheck"></Button>

            <Button
                android:id="@+id/minus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="OperatorEvent"
                android:text="-"
                android:textColor="#6BF807"
                android:textSize="24sp"
                tools:ignore="TextContrastCheck"></Button>

            <Button
                android:id="@+id/mul"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="OperatorEvent"

                android:text="*"
                android:textColor="#6BF807"
                android:textSize="24sp"
                tools:ignore="TextContrastCheck"></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/seven"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/bluback"
                android:insetTop="8dp"
                android:onClick="NumberEvent"
                android:text="7"
                android:textColor="#6BF807"
                android:textSize="24sp"
                tools:ignore="TextContrastCheck"></Button>

            <Button
                android:id="@+id/eight"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/bluback"
                android:onClick="NumberEvent"
                android:text="8"
                android:textColor="#6BF807"
                android:textSize="24sp"
                tools:ignore="TextContrastCheck"></Button>

            <Button
                android:id="@+id/nine"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/bluback"
                android:onClick="NumberEvent"
                android:text="9"
                android:textColor="#6BF807"
                android:textSize="24sp"
                tools:ignore="TextContrastCheck"></Button>

            <Button
                android:id="@+id/div"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="OperatorEvent"
                android:text="/"
                android:textColor="#6BF807"
                android:textSize="24sp"
                tools:ignore="TextContrastCheck"></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/six"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/bluback"
                android:onClick="NumberEvent"
                android:text="6"
                android:textColor="#64F409"
                android:textSize="24sp"
                tools:ignore="TextContrastCheck"></Button>

            <Button
                android:id="@+id/five"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/bluback"
                android:onClick="NumberEvent"
                android:text="5"
                android:textColor="#64F409"
                android:textSize="24sp"
                tools:ignore="TextContrastCheck"></Button>

            <Button
                android:id="@+id/four"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/bluback"
                android:onClick="NumberEvent"
                android:text="4"
                android:textColor="#64F409"
                android:textSize="24sp"
                tools:ignore="TextContrastCheck"></Button>

            <Button
                android:id="@+id/modulo"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="percentrEvent"
                android:text="%"
                android:textColor="#64F409"
                android:textSize="24sp"
                tools:ignore="TextContrastCheck"></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FB8C00"
            android:paddingBottom="4dp">

            <Button
                android:id="@+id/one"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/bluback"
                android:onClick="NumberEvent"
                android:text="1"
                android:textColor="#64F409"
                android:textSize="24sp"
                tools:ignore="TextContrastCheck"></Button>

            <Button
                android:id="@+id/two"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/bluback"
                android:onClick="NumberEvent"
                android:text="2"
                android:textColor="#64F409"
                android:textSize="24sp"
                tools:ignore="TextContrastCheck"></Button>

            <Button
                android:id="@+id/three"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/bluback"
                android:onClick="NumberEvent"
                android:text="3"
                android:textColor="#64F409"
                android:textSize="24sp"
                tools:ignore="TextContrastCheck"></Button>

            <Button
                android:id="@+id/answer"
                android:layout_width="30pt"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="equalEvent"
                android:text="="
                android:textColor="#64F409"
                android:textSize="24sp"
                tools:ignore="TextContrastCheck"></Button>
        </TableRow>


    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_dynamic_secondary80"
        android:orientation="horizontal">

        <Button
            android:id="@+id/zero"
            android:layout_width="243dp"
            android:layout_height="60dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="6dp"
            android:layout_weight="1"
            android:background="@color/bluback"
            android:onClick="NumberEvent"
            android:text="0"
            android:textColor="#64F409"
            android:textSize="24sp"
            tools:ignore="TextContrastCheck"></Button>

        <Button
            android:id="@+id/dot"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@color/bluback"
            android:onClick="NumberEvent"
            android:text="."
            android:textColor="#64F409"
            android:textSize="30sp"
            tools:ignore="TextContrastCheck"></Button>

    </LinearLayout>
</LinearLayout>